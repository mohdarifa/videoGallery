<div class="col-md-6 video-preview">
	<div class="body">
		<a class="preview cursor-pointer text-center" video-src="<%= config.UPLOADS_PATH+video.filename %>" video-type="<%= video.mimetype %>">
			<img src="<%= config.VIDEO_POSTER_UPLOAD_PATH+video.poster %>"/>
			<i class="fa fa-play-circle-o"></i>
		</a>
		<div class="footer">
			<span>Size: <strong><%= Math.round((video.size / 1024) / 1024) %> MB</strong></span> |
			<a class="download-video cursor-pointer" href="api/video/download/<%= video.id %>">Download</a> |
			<a class="delete-video cursor-pointer" href="api/video/delete" data-id="<%= video.id %>">Delete</a>
		</div>
	</div>
</div>